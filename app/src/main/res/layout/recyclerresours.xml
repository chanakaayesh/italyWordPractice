<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/NmT"
    android:background="@color/white"
    app:cardCornerRadius="20dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/relativvelaoutresouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/recyleroneitembackground"
            >
            <!-- done icon-->



            <ImageView

                android:layout_marginTop="@dimen/NmT"
                android:id="@+id/wordImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="center"
                android:background="@color/purple_200"
                android:layout_marginRight="@dimen/NmT"
                />
            <Space

                android:id="@+id/btn1AboveSpacer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/NmT"

                />
            <Button

                android:id="@+id/englsihWordBT"
                android:layout_width="match_parent"
                android:layout_height="@dimen/RVbuttonheight"
                android:layout_toEndOf="@id/wordImage"
                android:background="@drawable/recyclerviewbtn"
                android:text="EnglishWord"
                android:textAllCaps="false"
                android:textColor="@color/appThemColr"
                android:layout_marginTop="@dimen/NmT"

                />


            <RelativeLayout
                android:id="@+id/italyWordBT"
                android:layout_width="match_parent"
                android:layout_height="@dimen/RVbuttonheight"
                android:layout_toEndOf="@id/wordImage"
                android:layout_below="@id/englsihWordBT"
                android:layout_marginTop="@dimen/NmT"

                android:text="Forgotable"

                android:textColor="@color/appThemColr"

                >
                <Button
                    android:id="@+id/italyWordBT1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/RVbuttonheight"

                    android:background="@drawable/recyclerviewbtn"
                    android:text="Italiano"
                    android:textAllCaps="false"
                    android:textColor="@color/appThemColr"


                    />



            </RelativeLayout>




            <Button
                android:id="@+id/forgatableWordBT"
                android:layout_width="match_parent"
                android:layout_height="@dimen/RVbuttonheight"
                android:layout_toEndOf="@id/wordImage"
                android:layout_below="@id/italyWordBT"
                android:layout_marginTop="@dimen/NmT"
                android:background="@drawable/recyclerviewbtn"
                android:text="Forgotable"
                android:textAllCaps="false"
                android:textColor="@color/appThemColr"
                android:visibility="gone"

                />


            <Space
                android:id="@+id/btn2AboveSpacer"
                android:layout_below="@id/italyWordBT"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/deletebtn"
                android:visibility="gone"
                android:layout_below="@+id/italyWordBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/deleteicon"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/NmT"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</androidx.cardview.widget.CardView>